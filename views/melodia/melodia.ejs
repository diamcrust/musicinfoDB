<!doctype html>
<html lang="en">

<head>
    <%- include('../head') %>
</head>

<body>
    <%- include('../header') %>
    <div class="container">
        <table id="MELODIA" class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">IDMELODIA</th>
                    <th scope="col">NOMBRE</th>
                    <th scope="col">DURACION</th>
                    <th scope="col">ALBUM</th>
                    <th scope="col">LIKES</th>
                    <th scope="col">IDCATEGORIA</th>
                    <th scope="col">IDPLAYLIST</th>
                    <th scope="col">MODIFICAR</th>
            </thead>
            <tbody>
                <% results.forEach((user)=> { %>
                    <tr>
                        <td>
                            <%=user.IDMELODIA%>
                        </td>
                        <td>
                            <%=user.NOMBRE%>
                        </td>
                        <td>
                            <%=user.DURACION%>
                        </td>
                        <td>
                            <%=user.ALBUM%>
                        </td>
                        <td>
                            <%=user.LIKES%>
                        </td>
                        <td>
                            <%=user.IDCATEGORIA%>
                        </td>
                        <td>
                            <%=user.IDPLAYLIST%>
                        </td>
                        <td>
                            <a href="/editmelodia/<%=user.IDMELODIA%>" class="btn btn-outline-info"><i
                                    class="fa-solid fa-pen"></i></a>
                            <a onclick="confirmar(<%=user.IDMELODIA%>)" class="btn btn-outline-danger"><i
                                    class="fa-solid fa-trash"></i></a>

                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.10/dist/sweetalert2.all.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#MELODIA').DataTable();
        });
        function confirmar(IDMELODIA) {
            Swal.fire({
                title: '¿Confirma eliminar registro: '+IDMELODIA+'?',
                text: "¡Esto no prodrá ser revetido!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Confirmar'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location = '/deletemelodia/' + IDMELODIA;
                    Swal.fire(
                        'Eliminado!',
                        'El registro ha sido eliminado',
                        'success'
                    )
                }
            })
        }
    </script>

</body>
<footer>
    <%- include('../footer'); %>
</footer>
</html>