<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Usando boxicons-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>


    <title>CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
    <%- include('../header'); %>
    <% if (resultsmel) { %>
        <div class="container mt-4">
            <div class="card border-secondary">
                <div class="card-header">Editar Creditos</div>
                <div class="card-body">
                    <form action="/updatemi" method="POST">
                        <input id="IDMELODIA" name="IDMELODIA" value="<%= resultsmel.IDMELODIA %>" hidden>
                        <div class="mb-3">
                            <label for="IDMELODIA" class="form-label">MELODIA</label>
                            <select class="form-select" name="IDMELODIA">
                                <% resultsmel.forEach((resultsmel) => { %>
                                    <option value="<%= resultsmel.IDMELODIA %>"><%= resultsmel.IDMELODIA + ') ' + resultsmel.MELODIA_NOMBRE %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="IDINTERPRETE" class="form-label">INTERPRETE</label>
                            <select class="form-select" name="IDINTERPRETE">
                                <% resultsint.forEach((resultsint) => { %>
                                    <option value="<%= resultsint.IDINTERPRETE %>"><%= resultsint.IDINTERPRETE + ') ' + resultsint.INTERPRETE_NOMBRE %></option>
                                <% }) %>
                            </select>
                        </div>  
                        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
        <% } %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
</body>
<footer>
    <%- include('../footer'); %>
</footer>
</html>