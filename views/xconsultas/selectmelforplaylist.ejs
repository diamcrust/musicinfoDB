<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Usando cndjs.com/libraries/font-awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
</head>

<body>
    <%- include('../header'); %>
    <div class="container">
        <table id="MELFORPLAYLIST" class="table table-bordered table-striped text-center mt-4">
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">NOMBRE MELODIA</th>
                    <th scope="col">NOMBRE INTERPRETE</th>
                    <th scope="col">DURACIÃ“N</th>
                    <th scope="col">ALBUM</th>
                    <th scope="col">LIKES</th>

            </thead>
            <tbody>
                <% results.forEach((user)=> { %>
                    <tr>
                        <td>
                            <%=user.MELODIA_NOMBRE%>
                        </td>
                        <td>
                            <%=user.INTERPRETE_NOMBRE%>
                        </td>
                        <td>
                            <%=user.DURACION%>
                        </td>
                        <td>
                            <%=user.ALBUM%>
                        </td>
                        <td>
                            <%=user.LIKES%>
                        </td>

                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.10/dist/sweetalert2.all.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#MELFORPLAYLIST').DataTable();
        });
    </script>

</body>
<footer>
    <%- include('../footer'); %>
</footer>
</html>