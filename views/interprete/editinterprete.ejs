<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!--Usando boxicons-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>


    <title>CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
    <%- include('../header'); %>
    <% if (user) { %>
        <div class="container mt-4">
            <div class="card border-secondary">
                <div class="card-header">Editar Interprete</div>
                <div class="card-body">
                    <form action="/updateinterprete" method="POST">
                        <input id="IDINTERPRETE" name="IDINTERPRETE" value="<%= user.IDINTERPRETE %>" hidden>
                        <div class="mb-3">
                            <label for="NOMBRE" class=" form-label">NOMBRE</label>
                            <input type="text" class="form-control" id="NOMBRE" name="NOMBRE" value="<%= user.NOMBRE %>" tabindex="1">
                        </div>
                        <div class="mb-3">
                            <label for="OYENTESMNS" class="form-label">OYENTESMNS</label>
                            <input type="text" class="form-control" id="OYENTESMNS" name="OYENTESMNS" value="<%= user.OYENTESMNS %>" tabindex="1">
                        </div>
                        <div class="mb-3">
                            <label for="SEGUIDORES" class="form-label">SEGUIDORES</label>
                            <input type="text" class="form-control" id="SEGUIDORES" name="SEGUIDORES" value="<%= user.SEGUIDORES %>" tabindex="1">
                        </div>
                        <div class="mb-3">
                            <label for="OC" class="form-label">OC</label>
                            <input type="text" class="form-control" id="OC" name="OC" value="<%= user.OC %>" tabindex="1">
                        </div>
                        <!-- <div class="mb-3">
                            <label for="CONDICION" class="form-label">CONDICION</label>
                            <input type="text" class="form-control" id="CONDICION" name="CONDICION" value="<%= user.CONDICION %>" tabindex="1">
                        </div> -->
                        <div class="mb-3">
                            <label for="user" class="form-label">CONDICION</label>
                            <select id="CONDICION" name="CONDICION" class="form-select" aria-label="Default select example" tabindex="2">
                                <option value="Artista Verificado" selected>Artista Verificado</option>
                                <option value="Artista NO verificado">Artista NO verificado</option>                    
                            </select>
                        </div>  

                        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
        <% } %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
</body>
<footer>
    <%- include('../footer'); %>
</footer>
</html>